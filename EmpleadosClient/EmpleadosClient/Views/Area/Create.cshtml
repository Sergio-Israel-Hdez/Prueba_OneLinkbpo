@model Entities.Area

@{
    ViewData["Title"] = "Agregar Area";
}

<h2 class="display-1">Crear Area</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="NombreArea" class="control-label"></label>
                <input asp-for="NombreArea" class="form-control" />
                <span asp-validation-for="NombreArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

